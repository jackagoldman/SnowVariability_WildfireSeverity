}

@article{tran.etal2007,
  title = {Impact of Minimum Winter Temperatures on the Population Dynamics of {{Dendroctonus}} Frontalis},
  author = {Tran, J. K. and Ylioja, T. and Billings, R. F. and Regniere, J. and Ayres, M. P.},
  year = {2007},
