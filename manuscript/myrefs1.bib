@article{kelly.etal2013,
  title = {Recent Burning of Boreal Forests Exceeds Fire Regime Limits of the Past 10,000 Years},
  author = {Kelly, R. and Chipman, M. L. and Higuera, P. E. and Stefanova, I. and Brubaker, L. B. and Hu, F. S.},
  year = {2013},
