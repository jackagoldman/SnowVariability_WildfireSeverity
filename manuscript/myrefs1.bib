  file = {/Users/jgoldman/Zotero/storage/25H2D2TI/Sturtevant et al. - 2012 - Comparing modern and presettlement forest dynamics.pdf;/Users/jgoldman/Zotero/storage/IMCHQECD/Sturtevant et al. - 2012 - Comparing modern and presettlement forest dynamics.pdf}
