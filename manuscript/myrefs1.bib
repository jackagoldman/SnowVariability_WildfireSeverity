@article{thom.etal2017,
  title = {Disturbances Catalyze the Adaptation of Forest Ecosystems to Changing Climate Conditions},
  author = {Thom, D. and Rammer, W. and Seidl, R.},
  year = {2017},
  month = jan,
  journal = {Glob Chang Biol},
  edition = {Twenty million, one hundred sixty-one thousand, sixth},
